{
  "compilerOptions": {
    "lib": ["es2022", "DOM", "DOM.Iterable", "webworker"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "outDir": "dist"
  },
  "include": [
    "*.js",
    "resources",
    "server",
    "test",
    "dist/sw-helper.js"
    // "typings/*.d.ts"
  ],
  "exclude": [
    "node_modules", "resources/vendor", "resources/user-sample.js",
    "resources/user.js",
    "sw-sample.js",
    "dist"
  ]
}
